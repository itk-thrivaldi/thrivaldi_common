<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="sim_floor" default="true"/>
  <arg name="sim_gantry" default="true"/>
  <group ns="floor">
    <remap from="/position_trajectory_controller/follow_joint_trajectory" to="/joint_trajectory_action"/>
    <remap from="/position_trajectory_controller/state" to="/feedback_states"/>
    <remap from="/position_trajectory_controller/command" to="/joint_path_command"/>
    <rosparam file="$(find robotlab)/config/floor_rsi_params_sim.yaml" command="load" if="$(arg sim_floor)"/>
    <rosparam file="$(find robotlab)/config/floor_rsi_params.yaml" command="load" unless="$(arg sim_floor)"/>
    <node name="kuka_hardware_interface" pkg="kuka_rsi_hw_interface" type="kuka_hardware_interface_node" respawn="false" output="screen" required="true"/>
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find robotlab)/config/floor_hardware_controllers.yaml" command="load"/>
    <!-- Load standard kuka controller joint names from YAML file to parameter server -->
    <rosparam file="$(find robotlab)/config/floor_controller_joint_names.yaml" command="load"/>
    <!-- Load controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="position_trajectory_controller joint_state_controller --shutdown-timeout 1"/>
    <!-- Load robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    <!-- Load RSI simulation node -->
    <node name="kuka_rsi_simulator" pkg="kuka_rsi_simulator" type="kuka_rsi_simulator" args="127.0.0.1 49152" if="$(arg sim_floor)"/>
  </group>
  <group ns="gantry">
    <remap from="/position_trajectory_controller/follow_joint_trajectory" to="/joint_trajectory_action"/>
    <remap from="/position_trajectory_controller/state" to="/feedback_states"/>
    <remap from="/position_trajectory_controller/command" to="/joint_path_command"/>
    <rosparam file="$(find robotlab)/config/gantry_rsi_params_sim.yaml" command="load" if="$(arg sim_gantry)"/>
    <rosparam file="$(find robotlab)/config/gantry_rsi_params.yaml" command="load" unless="$(arg sim_gantry)"/>
    <node name="kuka_hardware_interface" pkg="kuka_rsi_hw_interface" type="kuka_hardware_interface_node" respawn="false" output="screen" required="true"/>
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find robotlab)/config/gantry_hardware_controllers.yaml" command="load"/>
    <!-- Load standard kuka controller joint names from YAML file to parameter server -->
    <rosparam file="$(find robotlab)/config/gantry_controller_joint_names.yaml" command="load"/>
    <!-- Load controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="position_trajectory_controller joint_state_controller --shutdown-timeout 1"/>
    <!-- Load robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    <!-- Load RSI simulation node -->
    <node name="kuka_rsi_simulator" pkg="kuka_rsi_simulator" type="kuka_rsi_simulator" args="127.0.0.1 49153 --external_axes=True" if="$(arg sim_gantry)"/>
  </group>
</launch>
